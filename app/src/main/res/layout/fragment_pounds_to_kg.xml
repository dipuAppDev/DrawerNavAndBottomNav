<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PoundsToKgFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleT"
        android:text="Convert Pounds to KG"
        android:textSize="30sp"
        android:textColor="#3F51B5"
        android:textStyle="bold"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pounToKgUnit"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/titleT"
        android:hint="Enter Pounds Unit"
        android:layout_marginTop="20dp"
        android:inputType="text"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/poundTKgConvertBtn"
        android:text="Convert To"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/pounToKgUnit"
        app:layout_constraintStart_toStartOf="@+id/pounToKgUnit"
        app:layout_constraintEnd_toEndOf="@+id/pounToKgUnit"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/poundsToKgResult"
        android:text="Result"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/poundTKgConvertBtn"
        app:layout_constraintStart_toStartOf="@id/poundTKgConvertBtn"
        app:layout_constraintEnd_toEndOf="@id/poundTKgConvertBtn"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/poundsToKgResult"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/cel_to_kel"
            android:id="@+id/celToKel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleT"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/meter_to_feet"
            android:id="@+id/meterToFeet"
            app:layout_constraintTop_toBottomOf="@id/mToKiloT"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/miter_to_kilo"
            android:id="@+id/meterToKilo"
            app:layout_constraintTop_toBottomOf="@id/celToKelT"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/g_to_kg"
            android:id="@+id/gramToKg"
            app:layout_constraintTop_toBottomOf="@id/mToFeetT"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>