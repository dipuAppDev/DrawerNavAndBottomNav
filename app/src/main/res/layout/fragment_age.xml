<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DFD9D9"
    android:id="@+id/age"
    tools:context=".AgeFragment">





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleT"
        android:text="Age Converter"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textAllCaps="true"
        android:textColor="#3F51B5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleT"
        app:layout_constraintStart_toStartOf="@id/titleT"
        app:layout_constraintEnd_toEndOf="@id/titleT"
        android:id="@+id/calYAgeTv"
        android:text="Calculate your"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="#A13C3C"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ageT"
        android:textSize="25sp"
        android:text="Age"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/calYAgeTv"
        app:layout_constraintStart_toStartOf="@id/titleT"
        app:layout_constraintEnd_toEndOf="@id/titleT"
        android:layout_marginTop="20dp"
        android:background="#8BC34A"
        android:textColor="@color/white"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minutesT"
        android:text="In Minutes"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/ageT"
        app:layout_constraintStart_toStartOf="@id/ageT"
        app:layout_constraintEnd_toEndOf="@id/ageT"
        android:layout_marginTop="30dp"
        android:textColor="#A13C3C"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ageInMinutesET"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/minutesT"
        app:layout_constraintStart_toStartOf="@id/minutesT"
        app:layout_constraintEnd_toEndOf="@id/minutesT"
        android:layout_marginTop="30dp"
        android:hint="Enter your age"
        android:textColor="@color/black"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calculateBtn"
        android:text="Calculate"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/ageInMinutesET"
        app:layout_constraintStart_toStartOf="@id/ageInMinutesET"
        app:layout_constraintEnd_toEndOf="@id/ageInMinutesET"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:paddingHorizontal="40dp"
        android:paddingVertical="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultBirthT"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/calculateBtn"
        app:layout_constraintStart_toStartOf="@id/calculateBtn"
        app:layout_constraintEnd_toEndOf="@id/calculateBtn"
        android:layout_marginTop="30dp"
        android:textColor="#A13C3C"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minutesText"
        android:text="Minutes"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/resultBirthT"
        app:layout_constraintStart_toStartOf="@id/resultBirthT"
        app:layout_constraintEnd_toEndOf="@id/resultBirthT"
        android:layout_marginTop="30dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>